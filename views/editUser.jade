extends layout

block content
  #wrapper.container
    include partials/nav.jade
    h1 Create User
    form.form-signin(method="post", action="/edit/#{username}")
      h2.form-signin-heading Please sign up
      input(type='text', name="id", hidden, value="#{_id}")
      label.sr-only(for='inputFullName') FullName
      input#inputFullName.form-control(type='text', name="fullname", placeholder='Full Name', required='', autofocus='' value="#{fullname}")
      label.sr-only(for='inputUsername') Username
      input#inputUsername.form-control(type='text', name="username", placeholder='Username address', required='', autofocus='' value="#{username}")
      label.sr-only(for='inputEmail') Email address
      input#inputEmail.form-control(type='email', name="email", placeholder='Email address', required='', autofocus='' value="#{email}")
      label.sr-only(for='inputPassword') Password
      input#inputPassword.form-control(type='password', name="password", placeholder='Password', required='' value="#{password}")
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Edit
